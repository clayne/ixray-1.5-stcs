#include "common.h"

struct 	v2p
{
	half4	color	: COLOR0;	// rgb. intensity, for SM3 - tonemap prescaled
  	half2	tc0		: TEXCOORD0;
  	half2	tc1		: TEXCOORD1;
};

//uniform sampler2D 	s_clouds0	: register(s0);
//uniform sampler2D 	s_clouds1	: register(s1);
Texture2D	s_clouds0	: register(t0);
Texture2D	s_clouds1	: register(t1);

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 	main	( v2p I )	: SV_Target
{
//	half4 	s0		= tex2D		(s_clouds0,I.tc0);
//	half4 	s1		= tex2D		(s_clouds1,I.tc1);
	half4 	s0		= s_clouds0.Sample( smp_base, I.tc0 );
	half4 	s1		= s_clouds1.Sample( smp_base, I.tc1 );
	half4 	mix 	= I.color * (s0 + s1)	;

	half4 	rgb		= mix		;

//	return  half4	(rgb.rgb, I.color.a);
	return  rgb;
}
