#include "common.h"

struct 	v2p
{
 	float2 	tc: 		TEXCOORD0;	// base & distort
};

// uniform sampler2D 	s_base;
//uniform sampler2D 	s_distort;
Texture2D 	s_distort;

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 main ( v2p I ) : SV_Target
{
//	half2 	distort	= tex2D		(s_distort, I.tc);
	half2 	distort	= s_distort.Sample( smp_rtlinear, I.tc);
	half2	offset	= (distort.xy-.5h)*def_distort;
	half3	image 	= s_base.Sample( smp_rtlinear, I.tc + offset);

	// out
	return  half4	(image,1);					// +mov
}
