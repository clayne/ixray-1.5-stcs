#include "common.h"

struct 	v2p
{
 	half2 	tc0	: TEXCOORD0;	// base
  	half3	c0	: COLOR0;
	float	fog	: FOG;
};


//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 main( v2p I ) : SV_Target
{
//	half4	t_base 	= tex2D		(s_base,I.tc0);
	half4	t_base 	= s_base.Sample( smp_base, I.tc0);
	half3	final 	= t_base*I.c0*2;

	//	Fogging
	final 	= lerp(fog_color, final, I.fog);

	// out
	return  half4	(final, t_base.a*I.fog*I.fog);
}
